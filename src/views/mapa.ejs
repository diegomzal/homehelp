<%- layout('layouts/perfilLayout.ejs') %>
    <div id="map" style="width: auto; height: 400px; border-style: double; position: relative; overflow: hidden;"></div>

    <script>
      var listaLoc = [{"lat":-12.084614, "long":-76.971516, "nombre": "John Doe", "especialidad": "test", "username": "john_doe"}]

      function contratar(persona){
        var usuario = "<%= user.username %>"
        $.ajax({
                    url: '/mapa',
                    type: 'PUT',
                    data: "&cliente="+usuario+"&tecnico="+persona
                })
      }

      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: -34.397, lng: 150.644},
          zoom: 8
        });
        infoWindow = new google.maps.InfoWindow;
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(function(position) {
            var pos = {
              lat: position.coords.latitude,
              lng: position.coords.longitude
            };
            map.setCenter(pos);
            testMarker();
            
      console.log(listaLoc)
          }, function() {
            handleLocationError(true, infoWindow, map.getCenter());
          });
        } else {
          // Browser doesn't support Geolocation
          handleLocationError(false, infoWindow, map.getCenter());
        }

      }
      function handleLocationError(browserHasGeolocation, infoWindow, pos) {
        infoWindow.setPosition(pos);
        infoWindow.setContent(browserHasGeolocation ?
                              'Error: The Geolocation service failed.' :
                              'Error: Your browser doesn\'t support geolocation.');
        infoWindow.open(map);
      }
      var usuarioAbierto = "";
      function comprar(){
          contratar(usuarioAbierto)
          console.log(usuarioAbierto)
      }
      function addMarker(location, nombre, especialidad, username) {
        var texto = '<h4><b>' + nombre + '</b></h4></br><h5>' + especialidad + '</h5><button type="button" id="botonaso" onclick="comprar()">Contratar</button>'
        marker = new google.maps.Marker({
          position: location,
          map: map,
          title: nombre
        });
        infowindow = new google.maps.InfoWindow({
          content: texto
        })
        google.maps.event.addListener( marker, 'click', function() {
          infoWindow.setContent( texto );
          infoWindow.open( map, this );
          usuarioAbierto = username
          });
      }

    

      

      function testMarker() {
        '<% localizables.forEach(function(localizable) { %>'
        listaLoc.push({"lat":parseFloat('<%=localizable.lat%>'), "long":parseFloat('<%=localizable.long%>'), "nombre": "<%=localizable.name%>", "especialidad": "<%=localizable.especialidad%>", "username": "<%=localizable.username%>"})
        '<%})%>'
        for(i = 0; i < listaLoc.length; i++){
          addMarker(new google.maps.LatLng(listaLoc[i].lat, listaLoc[i].long),listaLoc[i].nombre, listaLoc[i].especialidad, listaLoc[i].username)
          
        }
      }
      
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBYvkIeO2BKYP5R46ljTG0qTJFDuAZA1eA&callback=initMap"
    async defer></script>

    
    
