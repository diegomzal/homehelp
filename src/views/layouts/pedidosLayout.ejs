    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
    <script>
        function menuMovil() {
            if (document.getElementById("navbarNav").className == "collapse navbar-collapse") {
                document.getElementById("navbarNav").className += " show";
            } else {
                document.getElementById("navbarNav").className = "collapse navbar-collapse"
            }
        }
        function eliminarPedido(id){
            $.ajax({
                url: '/pedidos/eliminarPedido',
                type: 'PUT',
                data: "id=" + id
            })
            alert("El pedido ha sido eliminado")
            location.reload(true)
        }
        function eliminarServicio(id){
            $.ajax({
                url: '/servicios/eliminarServicio',
                type: 'PUT',
                data: "id=" + id
            })
            alert("El servicio ha sido eliminado")
            location.reload(true)
        }
        function terminarServicio(id){
            $.ajax({
                url: '/servicios/terminarServicio',
                type: 'PUT',
                data: "id=" + id
            })
            alert("El servicio ha sido terminado.")
            location.reload(true)
        }
        function cancelarServicio(id){
            $.ajax({
                url: '/servicios/cancelarServicio',
                type: 'PUT',
                data: "id=" + id
            })
            alert("El servicio ha sido cancelado.")
            location.reload(true)
        }

    </script>   
    
    
</head>

